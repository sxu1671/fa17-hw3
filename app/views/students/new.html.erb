<%= form_tag teachers_path do %>
  <%= label_tag(:full_name, "Full name") %>
  <%= text_field_tag(:full_name, nil, placeholder: @placeholder_full_name) %>

  <%= label_tag(:course, "Course name") %>
  <%= text_field_tag(:course, nil, placeholder: @placeholder_course) %>

  <%= label_tag(:grade_level, "Grade level") %>
  <%= text_field_tag(:grade_level, nil, placeholder: @placeholder_grade_level) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create student") %>
<% end %>

